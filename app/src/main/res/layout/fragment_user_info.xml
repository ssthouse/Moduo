<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/personal_content_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--头像-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_iv_avatar"
            android:layout_width="158dp"
            android:layout_height="158dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/avatar" />

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/personal_line_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="用户名 :"
                android:textColor="#6b6b6b"
                android:textSize="16sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/id_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:text="未登录"
                android:textColor="#6b6b6b"
                android:textSize="16sp" />
        </LinearLayout>

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_line_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="密    码 :"
                android:textColor="#6b6b6b"
                android:textSize="16sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/id_tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:text="未登录"
                android:textColor="#6b6b6b"
                android:textSize="16sp" />
        </LinearLayout>

        <!--分割线-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/personal_line_light" />

        <!--初始仅匿名登录按钮课件(因为初始未登录)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="65dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/id_btn_login"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="58dp"
                android:background="@drawable/personal_bottom_bind"
                android:text="实名登陆"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/id_btn_log_out"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/personal_bottom_unbundling"
                android:text="注销"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>